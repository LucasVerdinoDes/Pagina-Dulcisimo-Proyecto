<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span> Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-2 text-rigth">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus">
                </i>Nuevo</a>
        </div>
        <div class="col-3">
            <form class="form-inline my-2 my-lg-0"  action="/admin/novedades" method="get">
                <input class="form-control mr-sm-2" type="search" placeholder="search"
                aria-label="search" name="q" {{#if q}} value="{{q}}" {{/if}}>
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                {{#if is_search}}
                    {{#unless novedades.lenght}}
                        No se encontraron resultados para "<strong>{{q}}</strong>"
                    {{/unless}}
                {{/if}}
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead >
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imágen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                         <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" title="modificar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>